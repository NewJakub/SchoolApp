<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SchoolApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SchoolApp"
    Shell.FlyoutBehavior="Disabled"
    Title="SchoolApp">
    <TabBar>
        
        <ShellContent
            Title="Učitelé"
            ContentTemplate="{DataTemplate local:TeachersPage}"/>
        <ShellContent
            Title="Údržbáři"
            ContentTemplate="{DataTemplate local:MaintanencePage}"/>
        <ShellContent
            Title="Podpora"
            ContentTemplate="{DataTemplate local:SupportPage}"/>
        <ShellContent
            Title="Studenti"
            ContentTemplate="{DataTemplate local:StudentsPage}"/>
    </TabBar>
</Shell>
